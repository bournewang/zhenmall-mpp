/* pages/order/comment/add.wxss */
.con {
  padding: 30rpx;
}

.input-box {
  padding: 20rpx 20rpx;
  background-color: #eee;
  margin-top: 20rpx;
}

.input-box .content {
  width: 100%;
}


.imageList {
  height: auto;
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  padding: 10rpx;
}

.imageList .commentImage {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  /* margin: 30rpx 0 0 30rpx; */
}
.imageList .commentImage .close{
  position: absolute;
  right: 0;
  top: 0;
  display: block;
  background-color: #888;
  color: #fff;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  text-align: center;
}
.imageList .commentImage+.commentImage {
  margin-left: 20rpx;
}
.add-btn {
  width: 750rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}

.add-btn .red-btn {
  width: 670rpx;
}
.red-btn {
  background-color: #db0000;
  color: #fff;
  border-radius: 50rpx;
  width: 100%;
  font-size: 36rpx;
  height: 88rpx;
  line-height: 88rpx;
}
