.pack-action {
  display: flex;
  align-items: center;


}

.dec {
  width: 40rpx;
  height: 40rpx;
  font-size: 43rpx;
  line-height: 34rpx;
  font-weight: bold;
  text-align: center;
  box-sizing: border-box;
}

.pack-num {
  height: 40rpx;
  line-height: 40rpx;
  width: 60rpx;
  text-align: center;
}

.use-balance{
  display: flex;
  padding: 0 30rpx;
  box-sizing: border-box;
  align-items: center;
  /* justify-content: right; */
  flex-direction: row-reverse;
  font-size: 28rpx;
}
