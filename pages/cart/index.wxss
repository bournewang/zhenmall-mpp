/* pages/cart/index.wxss */

page {
  background-color: #f5f5f5;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

.list {
  overflow: hidden;
  width: 100%;
  margin: 20rpx 0 100rpx 0;
  background: #fff;
}

.area {
  width: 1050rpx;
  display: block;
  box-sizing: border-box;
  height: 200rpx;
  margin: 0 0 0 -150rpx;
  /* margin-left: -150rpx; */
}

.area-view {
  width: 900rpx;
  display: flex;
  box-sizing: border-box;
  height: 200rpx;
  margin-left: 150rpx;
}

.area-view .del-btn {
  width: 150rpx;
  height: 170rpx;
  background-color: #db0000;
  color: #fff;
  line-height: 170rpx;
  text-align: center;
}

.list .item {
  width: 750rpx;
  height: 200rpx;
  box-sizing: border-box;
  padding: 0 0 30rpx 42rpx;
  display: flex;
  align-items: center;
}

.item .radio {
  width: 50rpx;
  height: 50rpx;
}

.item .content {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  box-sizing: border-box;
}

.item .content  .left {
  width: 120rpx;
  height: 120rpx;
  border-radius: 5px;
  margin-left: 20rpx;
  position: relative;
}

.item .content  .middle {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 25rpx;
  padding-right: 0;
  width: 500rpx;
  position: relative;
}

.middle  .title {
  font-weight: bold;
  font-size: 25rpx;
}

.middle .desc {
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #999;
  height: 26rpx;
}

.middle .price {
  font-size: 36rpx;
  margin-top: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-weight: bold;
}

.price .dw {
  font-size: 24rpx;
  font-weight: normal;
}

.middle .num {
  position: absolute;
  right: 0;
  bottom: 25rpx;
  width: 157rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.num .inc, .num .dec {
  width: 40rpx;
  height: 40rpx;
  font-size: 43rpx;
  line-height: 34rpx;
  font-weight: bold;
  text-align: center;
  box-sizing: border-box;
}

.num .dec {
  border: 1px solid #db0000;
  border-radius: 50%;
  color: #db0000;
}

.num .inc {
  background-color: #db0000;
  border-radius: 50%;
  color: #fff;
}

.num .int {
  font-size: 26rpx;
  line-height: 26rpx;
}

.bottom {
  position: fixed;
  width: 100%;
  height: 98rpx;
  bottom: 0;
  background-color: #fff;
  display: flex;
}

.bottom .submit {
  background-color: #db0000;
  color: #fff;
  width: 270rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  font-size: 32rpx;
}

.bottom .kongbai {
  width: 480rpx;
  display: flex;
  align-items: baseline;
}

.bottom .kongbai .lb {
  margin-left: 30rpx;
  line-height: 98rpx;
  font-size: 26rpx;
}

.bottom .kongbai .dw {
  color: red;
  margin-left: 16rpx;
  font-size: 26rpx;
}

.bottom .kongbai .count {
  color: red;
  font-size: 48rpx;
  font-weight: bold;
}

.empty {
  padding-top: 300rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

.empty-image {
  width: 354rpx;
  height: 242rpx;
}

.empty-label {
  color: #999;
  font-size: 26rpx;
  margin-top: 50rpx;
}

.empty-btn {
  border: 1px solid #db0000;
  color: #db0000;
  font-size: 26rpx;
  width: 300rpx;
  background-color: #f5f5f5;
  margin-top: 80rpx;
}

.banner {
  width: 750rpx;
  height: 220rpx;
  box-sizing: border-box;
  padding: 10rpx 25rpx;
  border-radius: 10rpx;
  background-color: #f5f5f5;
}

.banner image {
  width: 700rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.no-status{
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  left: 0;
  top: 0;
  background-color: #eee;
  opacity: 0.5;
}